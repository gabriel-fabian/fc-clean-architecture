{
  "name": "fs-cleant-architecture",
  "version": "0.0.0",
  "description": "Node.js API using DDD, Clean Architecture and TypeScript.",
  "scripts": {
    "start": "node dist/infra/api/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/infra/api/server.js",
    "dev": "npm run build && tsc-watch --onSuccess \"npm run debug\"",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "jest --runInBand --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.23",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "git-commit-msg-linter": "^4.4.0",
    "husky": "^8.0.2",
    "jest": "^29.2.2",
    "lint-staged": "^13.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.8.4"
  },
  "author": "Gabriel Fabian",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.20",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.25.3",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.2",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": "19.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
